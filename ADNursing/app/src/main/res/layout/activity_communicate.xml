<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CommunicateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/top_bar"
        android:background="@color/White"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_bar_info_txt"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="20dp"
            android:text="交流" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/top_bar_plus_icon"
            android:layout_centerVertical="true"
            android:src="@mipmap/post_plus"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/top_bar_divd"
        android:background="@color/DivdGray"
        android:layout_below="@id/top_bar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/botton_bar"
        android:layout_alignParentBottom="true"
        android:background="@color/White">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botton_bar_icon"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/bottom_bar_home_icon"
                android:layout_weight="1"
                android:src="@drawable/bottom_bar_home"
                android:scaleType="fitCenter"
                android:paddingTop="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/bottom_bar_communicate_icon"
                android:layout_weight="1"
                android:src="@drawable/bottom_bar_communicate"
                android:scaleType="fitCenter"
                android:paddingTop="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/bottom_bar_test_icon"
                android:layout_weight="1"
                android:src="@drawable/bottom_bar_test"
                android:scaleType="fitCenter"
                android:paddingTop="1dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/bottom_bar_my_icon"
                android:layout_weight="1"
                android:src="@drawable/bottom_bar_my"
                android:scaleType="fitCenter"
                android:paddingTop="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/botton_bar_txt">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:id="@+id/bottom_bar_home_txt"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交流"
                android:id="@+id/bottom_bar_communicate_txt"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="2dp"
                android:textColor="@color/SDarkGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:id="@+id/bottom_bar_test_txt"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:id="@+id/bottom_bar_my_txt"
                android:layout_weight="1"
                android:textAlignment="center"
                android:paddingTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/bottom_bar_divd"
        android:background="@color/DivdGray"
        android:layout_above="@id/botton_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@id/top_bar_divd"
        android:layout_above="@id/bottom_bar_divd"
        android:background="@color/BgGray"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView"
                android:scrollbars="none"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/White">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="病症疑问\n2333条"
                        android:background="@drawable/communicate_topic_cube"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:id="@+id/post_set_topic_1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名医推荐\n2333条"
                        android:background="@drawable/communicate_topic_cube"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:id="@+id/post_set_topic_2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="药物推荐\n2333条"
                        android:background="@drawable/communicate_topic_cube"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:id="@+id/post_set_topic_3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交流分享\n2333条"
                        android:background="@drawable/communicate_topic_cube"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="15dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="15dp"
                        android:textAlignment="center"
                        android:textSize="18dp"
                        android:id="@+id/post_set_topic_4" />
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@color/White"
                android:paddingTop="10dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!--<LinearLayout-->
                        <!--android:orientation="vertical"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="最新"-->
                            <!--android:paddingLeft="5dp"-->
                            <!--android:paddingRight="5dp"-->
                            <!--android:textSize="14dp" />-->

                        <!--<View-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="2dp"-->
                            <!--android:background="@color/DarkGray"/>-->

                    <!--</LinearLayout>-->

                    <!--<LinearLayout-->
                        <!--android:orientation="vertical"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content">-->

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="最热"-->
                            <!--android:layout_marginLeft="5dp"-->
                            <!--android:paddingLeft="5dp"-->
                            <!--android:paddingRight="5dp"-->
                            <!--android:textSize="14dp" />-->

                        <!--<View-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="0dp"-->
                            <!--android:background="@color/DarkGray"/>-->

                    <!--</LinearLayout>-->
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="最新"
                            android:id="@+id/select_text_newest"
                            android:button="@null"
                            android:textAlignment="center"
                            android:checked="false"
                            android:textColor="#414141" />

                        <RadioButton
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="最热"
                            android:id="@+id/select_text_hottest"
                            android:button="@null"
                            android:layout_marginLeft="20dp"
                            android:textAlignment="center"
                            android:textColor="#414141" />

                    </RadioGroup>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp">

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:id="@+id/select_bar_newest"
                            android:background="#414141"/>

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:id="@+id/select_bar_hottest"
                            android:background="#414141"
                            android:layout_marginLeft="20dp" />


                    </LinearLayout>
                </LinearLayout>

                <softwaredesign.adnursing.Custom.MyListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/post_list"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:divider="@null">

                </softwaredesign.adnursing.Custom.MyListView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
