<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/new_test_result_sculpture"
            android:src="@mipmap/sculpture_unknown_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您此次得分为：（每项一分）"
            android:id="@+id/new_test_result_score"
            android:layout_marginTop="40dp"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文案"
            android:id="@+id/new_test_result_advise"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:id="@+id/new_test_result_back_button"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
    </LinearLayout>
</RelativeLayout>